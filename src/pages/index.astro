---
import Layout from '~/layouts/PageLayout.astro';
import logo from '~/assets/images/exaone-logo.svg';

const metadata = {
  title: 'ExaOne Digital — Coming Soon',
  description: 'Professional technology consulting for European businesses. Website launching soon.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 via-white to-blue-50 dark:from-slate-900 dark:via-slate-800 dark:to-slate-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <!-- Logo -->
      <div class="mb-12">
        <img
          src={logo.src}
          alt="ExaOne Digital"
          class="h-16 sm:h-20 mx-auto dark:invert"
        />
      </div>

      <!-- Main Heading -->
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-gray-900 dark:text-white mb-6">
        We're Cooking Something Good
      </h1>

      <!-- Subheading -->
      <p class="text-xl sm:text-2xl text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
        Professional technology consulting for European businesses.
      </p>

      <!-- Brief Description -->
      <div class="max-w-2xl mx-auto mb-12">
        <p class="text-lg text-gray-700 dark:text-gray-400 mb-4">
          ExaOne Digital is launching soon with expert services in:
        </p>
        <div class="flex flex-wrap justify-center gap-4 text-base text-gray-600 dark:text-gray-400">
          <span class="px-4 py-2 bg-white dark:bg-slate-800 rounded-lg shadow-sm">
            SEO & Affiliate Marketing
          </span>
          <span class="px-4 py-2 bg-white dark:bg-slate-800 rounded-lg shadow-sm">
            Cloud Architecture
          </span>
          <span class="px-4 py-2 bg-white dark:bg-slate-800 rounded-lg shadow-sm">
            Business Automation
          </span>
        </div>
      </div>

      <!-- Contact -->
      <div class="mb-8">
        <p class="text-gray-600 dark:text-gray-400 mb-4">
          Interested in working together?
        </p>
        <a
          href="mailto:contact@exaone.digital"
          class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-lg transition-colors duration-200"
        >
          Get in Touch
        </a>
      </div>

      <!-- Footer Note -->
      <div class="mt-16 pt-8 border-t border-gray-200 dark:border-gray-700">
        <p class="text-sm text-gray-500 dark:text-gray-500">
          AEONEX OÜ (trading as ExaOne Digital)<br/>
          Estonian technology consulting company<br/>
          Registration: 17350891
        </p>
      </div>
    </div>
  </div>
</Layout>
